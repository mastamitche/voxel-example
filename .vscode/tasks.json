{
    "version": "2.0.0",
    "options": {
        "env": {
            "MTL_HUD_ENABLED": "1"
        }
    },
    "tasks": [
        {
            "label": "Run alex",
            "command": "cargo",
            "type": "shell",
            "args": [
                "run",
                "--release",
                "--features",
                "bevy/file_watcher",
                // "--bin",
                // "voxelize",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}